<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/my_message_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/my_message_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="xx.xx.xx"
            android:textSize="13sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/my_message_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="xx:xx"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_weight="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:gravity="end"
            android:id="@+id/my_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:padding="8dp"
            android:text="test message"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <ImageView
            android:gravity="end"
            android:id="@+id/my_message_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/round_border"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/message_id_my"
        />

</LinearLayout>