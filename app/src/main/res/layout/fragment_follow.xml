<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".followFragment.FollowMainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/follow_back_button"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/follow_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myyeongnamnu"
                android:gravity="center"
                android:text="ssss"
                android:textColor="@color/star"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_follow"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_follow_view_pager"
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:layout_height="0dp" />
    </LinearLayout>
</FrameLayout>