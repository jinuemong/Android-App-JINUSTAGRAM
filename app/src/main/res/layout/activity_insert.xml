<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".InsertActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_alternate_email_24" />

        <TextView
            android:fontFamily="@font/myyeongnamnu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Jinustagram"
            android:textColor="@color/star"
            android:textSize="50sp" />
    </LinearLayout>
    <EditText
        android:textStyle="bold"
        android:id="@+id/insert_user_email_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="이메일을 입력해주세요."
        android:textSize="20sp" />
    <EditText
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/insert_username_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="닉네임을 입력해주세요."
        android:textSize="20sp" />

    <EditText
        android:textStyle="bold"
        android:id="@+id/insert_user_password_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="비밀번호를 입력해주세요."

        android:textSize="20sp" />

    <EditText
        android:textStyle="bold"
        android:inputType="textPassword"
        android:id="@+id/insert_user_password_input2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="비밀번호를 다시 입력해주세요."
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.widget.Button
            android:textStyle="bold"
            android:id="@+id/insert_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/white"
            android:text="가입하기"
            android:textColor="@color/star" />

        <android.widget.Button
            android:textStyle="bold"
            android:id="@+id/insert_activity_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="뒤로가기"
            android:textColor="@color/star" />
    </LinearLayout>
</LinearLayout>