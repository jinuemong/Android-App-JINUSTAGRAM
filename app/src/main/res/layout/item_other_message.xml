<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/other_message_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_baseline_face_24"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/star"
        app:civ_border_overlay="false"/>

    <LinearLayout
        android:layout_weight="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start">

        <TextView
            android:gravity="start"
            android:id="@+id/other_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:padding="8dp"
            android:text="test message"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <ImageView
            android:gravity="start"
            android:id="@+id/other_message_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/round_border"
            android:visibility="gone" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/other_message_day"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="xx.xx.xx"
            android:textSize="13sp" />

        <TextView
            android:gravity="center"
            android:id="@+id/other_message_time"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="xx:xx"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/message_id_other"
        />

</LinearLayout>