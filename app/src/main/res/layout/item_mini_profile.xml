<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_ex_user_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_baseline_face_24"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/star"
        app:civ_border_overlay="false" />

    <LinearLayout
        android:id="@+id/Lin_item_ex_username"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_ex_username"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="name"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_ex_custom_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="custom_name"
            android:textSize="20sp" />
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_weight="1" />

    <android.widget.Button
        android:visibility="visible"
        android:layout_marginEnd="15dp"
        android:id="@+id/item_ex_user_following_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:text="팔로우"
        android:textColor="@color/star"
        android:textSize="16sp"
        android:textStyle="bold" />
    <ImageView
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_ex_X_button"
        android:src="@drawable/ic_baseline_close_24"
        />


</LinearLayout>